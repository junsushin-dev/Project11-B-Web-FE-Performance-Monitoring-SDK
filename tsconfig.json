{
  "compilerOptions": {
    /* Basic Options */
    "allowJs": true,
    "target": "es5",
    "module": "es6",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "lib": ["ES2015", "dom"]
  },
  "exclude": ["dist", "/src/test"]
}
